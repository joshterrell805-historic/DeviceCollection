	resize: function(extraSpace, thisSize){
		var newSize = {x: thisSize.x - extraSpace.x,
			y: thisSize.y - extraSpace.y};

		if(this.scrollBarEnabled)
			newSize.x += 1+getScrollBarWidth();

		$(this).setStyle("width", newSize.x);
		$(this).setStyle("height", newSize.y);
		$(this.myDevices).setStyle("width", newSize.x);
		$(this.myDevices).setStyle("height", newSize.y);

		$(devicesContainer.myDevicesTitleDiv).setStyle("width", newSize.x);
		$(devicesContainer.myDevicesTitleDiv).setStyle("margin-left", ($(devicesContainer).clientWidth - newSize.x)/2);

		$(devicesContainer.deviceDirectoryTitleDiv).setStyle("width", newSize.x);
		$(devicesContainer.deviceDirectoryTitleDiv).setStyle("margin-left", ($(devicesContainer).clientWidth - newSize.x)/2);

		var marginHeight = ($(page).clientHeight - $(devicesContainer).clientHeight) / 2;
		devicesContainer.margins[0].setStyle("height",  marginHeight);
		devicesContainer.margins[1].setStyle("height", marginHeight);

		$(this.pageBrowser).setStyle("width", newSize.x);


	},
